# Project Configuration
# This name is used for Docker containers, volumes, networks, and app branding
NEXT_PUBLIC_PROJECT_NAME=nextjs-kit-with-orpc

# FOR DOCKER COMPOSE FILE
POSTGRES_DB=<YOUR_POSTGRES_DB>
POSTGRES_USER=<YOUR_POSTGRES_USER>
POSTGRES_PASSWORD=<YOUR_POSTGRES_PASSWORD>

# Postgres Database 
DATABASE_URL=postgresql://${POSTGRES_USER}:${POSTGRES_PASSWORD}@localhost:5432/${POSTGRES_DB}?sslmode=disable

# Redis Configuration
REDIS_HOST=kubernetes.docker.internal
REDIS_PORT=6379
REDIS_PASSWORD=<YOUR_REDIS_PASSWORD>

# MinIO Credentials, FOR ENV INSIDE DOCKER COMPOSE FILE 
MINIO_ROOT_USER=<YOUR_MINIO_ROOT_USER>
MINIO_ROOT_PASSWORD=<YOUR_MINIO_ROOT_PASSWORD>

# MinIO Integration With Frontend (Next.js)
# use host.docker.internal or kubernetes.docker.internal to connect from host machine
S3_ENDPOINT=kubernetes.docker.internal 
S3_PORT=9000
# S3_ACCESS_KEY and SECRET use same as MINIO_ROOT_USER and MINIO_ROOT_PASSWORD for Self-Hosted Way
S3_ACCESS_KEY=<YOUR_S3_ACCESS_KEY>
S3_SECRET_KEY=<YOUR_S3_SECRET_KEY>
S3_USE_SSL=false
NEXT_PUBLIC_S3_BUCKET_NAME=${NEXT_PUBLIC_PROJECT_NAME}


NEXT_TURBOPACK_TRACING=1
NEXT_PUBLIC_SERVER_URL=http://localhost:3000
CORS_ORIGIN=http://localhost:3000

BETTER_AUTH_SECRET=<YOUR_BETTER_AUTH_SECRET>
APP_NAME=${NEXT_PUBLIC_PROJECT_NAME}

# GitHub OAuth
GITHUB_CLIENT_ID=<YOUR_GITHUB_CLIENT_ID>
GITHUB_CLIENT_SECRET=<YOUR_GITHUB_CLIENT_SECRET>

# Google OAuth
GOOGLE_CLIENT_ID=<YOUR_GOOGLE_CLIENT_ID>
GOOGLE_CLIENT_SECRET=<YOUR_GOOGLE_CLIENT_SECRET>

# PostHog Analytics
# Project API key (public, used for client-side event capture)
NEXT_PUBLIC_POSTHOG_KEY=phc_xxxxxxxxxxxxx
NEXT_PUBLIC_POSTHOG_HOST=https://eu.i.posthog.com

# PostHog API host for server-side queries (NO /ingest or /api path)
# US: https://us.posthog.com | EU: https://eu.posthog.com
NEXT_PUBLIC_POSTHOG_API_HOST=https://eu.posthog.com

# Your PostHog project ID (find in project settings URL or dashboard)
NEXT_PUBLIC_POSTHOG_PROJECT_ID=12345

# Personal API key (private, server-side only - needs "Query Read" permission)
# Generate at: https://app.posthog.com/settings/user-api-keys
POSTHOG_PERSONAL_API_KEY=phx_xxxxxxxxxxxxx
